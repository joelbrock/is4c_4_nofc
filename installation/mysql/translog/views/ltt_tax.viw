CREATE OR REPLACE VIEW `ltt_tax` AS select `l`.`trans_id` AS `trans_id`,`l`.`upc` AS `upc`,`l`.`description` AS `description`,`l`.`foodstamp` AS `foodstamp`,`l`.`department` AS `department`,`p`.`subdept` AS `subdept`,`l`.`total` AS `total`,`p`.`tax` AS `tax`,`t`.`rate` AS `rate`,(`l`.`total` * (`t`.`rate` / 100)) AS `taxtot`,if((`l`.`foodstamp` = 1),(`l`.`total` * (`t`.`fsrate` / 100)),0) AS `fstaxtot` from ((`translog`.`localtemptrans` `l` join `opdata`.`products` `p` on((`l`.`upc` = `p`.`upc`))) join `translog`.`tax_tbl` `t` on((`p`.`tax` = `t`.`id`)));